<?xml version="1.0" encoding="utf-8"?>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:background="@drawable/background_poster">

        <ImageView
            android:id="@+id/imgposter"
            android:layout_width="130dp"
            android:layout_height="180dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.47" />

    <TextView
        android:id="@+id/txtTitleDetail"
        android:layout_width="165dp"
        android:layout_height="75dp"
        android:layout_marginTop="4dp"
        android:textColor="#fff"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.226"
        app:layout_constraintStart_toEndOf="@+id/imgposter"
        app:layout_constraintTop_toTopOf="parent" />

        <com.timqi.sectorprogressview.ColorfulRingProgressView
            android:id="@+id/vote_average"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/background_vote_varange"
            app:bgColor="#e1e1e1"
            app:fgColorEnd="#134CA3"
            app:fgColorStart="#06A4B9"
            app:layout_constraintEnd_toStartOf="@+id/release_date"
            app:layout_constraintHorizontal_bias="0.068"
            app:layout_constraintStart_toEndOf="@+id/imgposter"
            app:layout_constraintTop_toBottomOf="@+id/txtTitleDetail"
            app:percent="75"
            app:startAngle="0"
            app:strokeWidth="8dp" />

        <TextView
            android:id="@+id/txtvote_average"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="75"
            android:textColor="#fff"
            android:textSize="10sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/vote_average"
            app:layout_constraintEnd_toEndOf="@+id/vote_average"
            app:layout_constraintStart_toStartOf="@+id/vote_average"
            app:layout_constraintTop_toTopOf="@+id/vote_average" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="%"
            android:textColor="#fff"
            android:textSize="8sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/vote_average"
            app:layout_constraintTop_toTopOf="@+id/vote_average" />

        <TextView
            android:layout_width="36dp"
            android:layout_height="35dp"
            android:layout_marginStart="4dp"
            android:gravity="center"
            android:text="User Score"
            android:textColor="#fff"
            android:textSize="10sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/vote_average"
            app:layout_constraintStart_toEndOf="@+id/vote_average"
            app:layout_constraintTop_toTopOf="@+id/vote_average" />

        <TextView
            android:id="@+id/txtdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="#fff"
            android:textSize="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/txtTitleDetail"
            app:layout_constraintStart_toEndOf="@+id/txtTitleDetail" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:text="Thể loại: "
            android:textColor="#FFF"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/imgposter"
            app:layout_constraintTop_toBottomOf="@+id/vote_average" />

    <TextView
        android:id="@+id/txtGenre"
        android:layout_width="166dp"
        android:layout_height="47dp"
        android:layout_marginStart="8dp"
        android:text="TextView"
        android:textColor="#FFF"
        app:layout_constraintBottom_toBottomOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toTopOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="28dp"
            android:text="Ngân sách: "
            android:textColor="#fff"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/imgposter"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <TextView
            android:id="@+id/txtBudget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="TextView"
            android:textColor="#fff"
            app:layout_constraintBottom_toBottomOf="@+id/textView7"
            app:layout_constraintStart_toEndOf="@+id/textView7"
            app:layout_constraintTop_toTopOf="@+id/textView7"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:text="Doanh thu: "
            android:textColor="#fff"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/imgposter"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <TextView
            android:id="@+id/txtRevenue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="TextView"
            android:textColor="#fff"
            app:layout_constraintBottom_toBottomOf="@+id/textView9"
            app:layout_constraintStart_toEndOf="@+id/textView9"
            app:layout_constraintTop_toTopOf="@+id/textView9"
            app:layout_constraintVertical_bias="0.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>
